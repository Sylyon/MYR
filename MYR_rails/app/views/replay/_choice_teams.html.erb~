      <% if Robot.find_by_team_id(team.id) != nil %>
        <% if @tabteams.index(team.id.to_s) != nil  %>
          <input type="checkbox" name="team<%= team.id %>" id="<%= team.id %>"> <b>Team: <%= team.name %></b><br>
        <% else %>
          <input type="checkbox" name="team<%= team.id %>" id="<%= team.id %>"> Team: <%= team.name %><br>
        <% end %>
        <%if @tabteams.index(team.id.to_s) != nil %>
          <%Robot.where(team_id: team.id).each do |rob|%>
            <div>&nbsp;</div>
          <% end %>
          <div>&nbsp;</div>
        <%end%>   
      <% end %>
    <% end %>
    <form></form>
    <a id="refreshrobots" href<%= link_to "", :action => :choicerobots2, remote: true%></a>
<script>
//------------------------------------------------------------------------------

//------------------------ ADD AND REMOVE TEAMS------------------------------------
function addteam(id){
  var str = $.cookie("rteamslist");
  if(isPresent(id,str) == true){
  }//do nothing
  else{
    //si le cookie est inexistant ou vide
    if($.cookie("rteamslist") == null || $.cookie("rteamslist") == ""){
      $.cookie("rteamslist",id);
      }
      //sinon ajout
    else{
      $.cookie("rteamslist",$.cookie("rteamslist")+","+id);
    }
  }
}

function rmvteam(id){
  var str = $.cookie("rteamslist");
  var tab = str.split(",");
  //index de l'élément à retirer
  var index = tab.indexOf(id);
  if(index > -1){
    //retirer élément
    tab.splice(index,1);
    res = tab.toString();
    $.cookie("rteamslist",res);
  }
}
//-------------------------------------------------------------------------------

//-------------------------------------------------------------------------------
function isPresent(id,str){
  if (str == null || str == ""){
    return false; //absent
  }
  else{
    var tab = str.split(",");
    var index = tab.indexOf(id);
    if(index > -1){
      return true;
    }
    else{
      return false;
    }
  }
}

//--------------INITIALIZATION-------------------------------------------------

$(document).ready(function(){
  var cpt=0;
  //initialize the checkboxs
  // FOR NOW => si pas de cookie -> rien n est coché
  $( "input[name*='team']" ).each(function () {
    var id = $(this).attr('id');
    var str = $.cookie("rteamslist");
    if (str!=null){
      var tab = str.split(",");
    }
    else{
      tab=[];
    }
    //index de l'élément à retirer
    var index = tab.indexOf(id);
    if(index > -1){
      $(this).prop('checked',true);
      cpt=cpt+1;
    }
    else{
      $(this).prop('checked',false);
    }
  })
  //initial display of the page
  //if at least one checkbox is checked
  $( "input[name*='team']" ).each(function () { 
    if($(this).is(':checked')){
      $("#refreshrobots").click();
    }
  })

  //-------------------  ACTIONS OF THE CHECKBOXES -------------------------------
  //pour toutes les checkboxes
  $( "input[name*='team']" ).each(function () { 
    //si on clique dessus
    $(this).click(function() {
      //récupére l'id de la checkbox
      var id = $(this).attr('id');
      //si coché
      if($(this).is(':checked')){
        addteam(id);
        cpt = cpt+1;
      }
      //si décoché
      else{
        rmvteam(id);
        cpt= cpt-1;
      }
      if (cpt == 0){
        $("#refreshdatetimes0").click();
      }
      $("#refreshrobots").click();
      $("#refreshteams2").click();
    })
  })  
  //-------------------------------------------------------------------------------
})
//-------------------------------------------------------------------------------

</script>
