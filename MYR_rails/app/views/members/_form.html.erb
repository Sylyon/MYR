<%= form_for(@member) do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="content">
  <section class="round">
    <% flash.each do |key, value| %>
      <div id="monflash" class="flash <%= key %>"><%= value %></div>
    <% end %>
  </section>
  <%= yield %>
  </div>

  <p>
  <% if @member.logo!="" && @member.logo!=nil %>
    <img src=<%= @member.logo %>>
  <% end %>
  </p>
  <div class="field">
    <strong><%= f.label :name %><br></strong>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <strong><%= f.label :password %><br></strong>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <strong><%= f.label :password_confirmation %><br></strong>
    <%= f.password_field :password_confirmation, :placeholder => "Repeat password" %>
  </div>
  <div class="field">
    <strong><%= f.label :email %><br></strong>
    <%= f.text_field :email, :placeholder => "email@exemple.com" %>
  </div>
  <div class="field">
    <strong><%= f.label :role %><br></strong>
    <%= f.select :role, ['visitor','player'] %>
  </div>
  <div class="field">
    <strong><%= f.label :logo %><br></strong>
    <%= f.text_field :logo %>
  </div>
  <p>
  <div class="actions">
    <%= f.submit %>
  </div>
  </p>
<% end %>
