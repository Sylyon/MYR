<p id="notice"><%= notice %></p>

<h1>Listing Teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Logo</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
      	<td><%= team.name %></td>
        <!--<% tm_path="/teams/"+team.id.to_s%>
        <td><%= link_to team.name , tm_path %></td>-->
        <!--<td><%= team.logo %></td>-->
        <td><%= link_to team.logo , tm_path %></td>
        <td><%= team.description %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if sign_in(current_user)%>
	<%= link_to 'New Team', new_team_path %>
<% end %>
